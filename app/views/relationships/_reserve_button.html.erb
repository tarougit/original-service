<% unless current_user == user %>
  <% if current_user.relationshiping?(post) %>
    <%= form_for(current_user.relationships.find_by(post_id: post.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'キャンセルする', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit '応募する', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>