<ul>
  <% post.relationship_users.each do |user| %>
      <li>
        <%= link_to user.name, user %>
        <span>
          <% if post.status == 0 %>
            <%= form_for(post) do |f| %>
              <%= f.hidden_field :status, value: user.id %>
              <%= f.submit "承認" %>
            <% end %>
          <% elsif User.find_by(id: post.status) == user %>
            <%= form_for(post) do |f| %>
              <%= f.hidden_field :status, value: 0 %>
              <%= f.submit "解除" %>
            <% end %>
          <% end %>
        </span>
      </li>
  <% end %>
</ul>